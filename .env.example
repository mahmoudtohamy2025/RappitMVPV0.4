# Database
DATABASE_URL=postgresql://user:password@localhost:5432/rappit

# Redis (for queues and caching)
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=7d

# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Shopify Integration
SHOPIFY_API_KEY=your_api_key
SHOPIFY_API_SECRET=your_api_secret
SHOPIFY_API_VERSION=2024-01
SHOPIFY_RATE_LIMIT_PER_SECOND=2
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret

# WooCommerce Integration
WOOCOMMERCE_CONSUMER_KEY=your_consumer_key
WOOCOMMERCE_CONSUMER_SECRET=your_consumer_secret

# DHL Shipping
DHL_API_KEY=your_dhl_api_key
DHL_API_SECRET=your_dhl_api_secret
DHL_ACCOUNT_NUMBER=your_dhl_account_number

# FedEx Integration
FEDEX_API_KEY=your_api_key
FEDEX_SECRET_KEY=your_secret_key
FEDEX_ACCOUNT_NUMBER=your_account_number
FEDEX_API_URL=https://apis-sandbox.fedex.com
FEDEX_SHIPPER_ACCOUNT=your_shipper_account
FEDEX_BILL_TO_ACCOUNT=your_bill_to_account

# For production, use:
# FEDEX_API_URL=https://apis.fedex.com

# Default Shipper Address (optional - can be set per shipping account)
FEDEX_SHIPPER_NAME=Your Company
FEDEX_SHIPPER_STREET=123 Main St
FEDEX_SHIPPER_CITY=City
FEDEX_SHIPPER_STATE=ST
FEDEX_SHIPPER_POSTAL_CODE=12345
FEDEX_SHIPPER_COUNTRY=US
FEDEX_SHIPPER_PHONE=5551234567

# Observability
LOG_LEVEL=info
